section#home

	home-data-section(group="abastecimento")

	home-data-section(group="esgoto")

	home-data-section(group="doencas")

//

	.row
		.home-data-section
			.section-title.row
				.container
					.twelve.columns
						h2 Doenças
						.clear
						nav
							ul.clearfix
								li(ng-repeat="selection in doencas.selections")
									a(href="javascript:void(0);" ng-click="doencas.changeSelection(selection)" ng-class="{active:doencas.selection.key == selection.key}") {{selection.name}}

			.map-container.anti-row.right
				map#doencas.map(user="infoamazonia" table="merge_fiocruz" column="{{doencas.selection.mapKey}}" where="estado_id IS NOT NULL" color="#0f0" baselayer="https://{s}.tiles.mapbox.com/v3/infoamazonia.j55mnl2i/{z}/{x}/{y}.png" interactivity="municipio,value")
				.infowindow(ng-show="doencas.map")
					h4 {{doencas.map.municipio}}
					p {{doencas.map.value}}

			.container
				.eight.columns
					ul.bar-list.uf-list.clearfix(ng-controller="EstadoController")
						li.bar-item.uf-item.clearfix(ng-repeat="(index, estado) in doencas.data | orderBy:'estado'" ng-click="accessState(estado.id)")
							span.rank {{index+1}}
							bar-item(percentage="{{estado.value}}" max="{{doencas.max.value}}" suffix="/100mil habitantes" data="estado")
								h3 {{data.estado}}
								p.municipios {{data.municipios}} municipios

				.four.columns
					.summary
						p
							span.big-stats(animate-count number="{{doencas.total}}" suffix="") 
							| internações por 100 mil habitantes por {{doencas.selection.name}} na  
							strong Amazônia Legal
							| .