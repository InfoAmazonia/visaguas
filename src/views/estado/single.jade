article#estado
	.section-title.row
		.container
			.twelve.columns
				h1 {{title}}

	.estado-content
		.container
			.twelve.columns
				h2 Ranking dos municípios

		.container
			.twelve.columns
				h3 Os 10 municípios com pior cobertura de abastecimento
				.clear
				nav
					ul.clearfix
						li(ng-repeat="selection in abastecimento.selections")
							a(href="javascript:void(0);" ng-click="abastecimento.changeSelection(selection)" ng-class="{active:abastecimento.selection.key == selection.key}") {{selection.name}}
				ul.bar-list.municipio-list.clearfix
					li.bar-item.municipio-item.clearfix(ng-repeat="(index, municipio) in abastecimento.data | orderBy:'value' | limitTo:10")
						span.rank {{index+1}}
						bar-item(percentage="{{municipio.value}}" data="municipio")
							h3 {{data.municipio}}

			.twelve.columns
				h3 Os 10 municípios com pior acesso a esgoto
				.clear
				nav
					ul.clearfix
						li(ng-repeat="selection in esgoto.selections")
							a(href="javascript:void(0);" ng-click="esgoto.changeSelection(selection)" ng-class="{active:esgoto.selection.key == selection.key}") {{selection.name}}
				ul.bar-list.municipio-list.clearfix
					li.bar-item.municipio-item.clearfix(ng-repeat="(index, municipio) in esgoto.data | orderBy:'value' | limitTo:10")
						span.rank {{index+1}}
						bar-item(percentage="{{municipio.value}}" data="municipio")
							h3 {{data.municipio}}

			.twelve.columns
				h3 Os 10 municípios com maiores índices de doenças
				.clear
				nav
					ul.clearfix
						li(ng-repeat="selection in doencas.selections")
							a(href="javascript:void(0);" ng-click="doencas.changeSelection(selection)" ng-class="{active:doencas.selection.key == selection.key}") {{selection.name}}
				ul.bar-list.municipio-list.clearfix
					li.bar-item.municipio-item.clearfix(ng-repeat="(index, municipio) in doencas.data | orderBy:'value':true | limitTo:10")
						span.rank {{index+1}}
						bar-item(percentage="{{municipio.value}}" data="municipio" max="{{doencas.max.value}}" suffix="/100mil habitantes")
							h3 {{data.municipio}}