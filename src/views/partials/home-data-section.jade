.home-data-section
	.section-title
		.container
			.twelve.columns
				h2 {{group.title}}
				nav
					ul
						li(ng-repeat="selection in group.selections")
							a(href="javascript:void(0);" ng-click="group.changeSelection(selection)" ng-class="{active:group.selection.key == selection.key}") {{selection.name}}
	.section-content.with-map
		.map-container.right
			map.map(id="{{group.name}}" user="infoamazonia" table="merge_fiocruz" column="{{group.selection.mapKey}}" where="estado_id IS NOT NULL" color="{{group.color}}" baselayer="https://{s}.tiles.mapbox.com/v3/infoamazonia.j55mnl2i/{z}/{x}/{y}.png" interactivity="municipio,value")
			.infowindow(ng-show="group.map")
				h4 {{group.map.municipio}}
				p {{group.map.value}}

		ul.bar-list.uf-list.inside-map.clearfix(ng-controller="EstadoController")
			li.bar-item.uf-item.clearfix(ng-repeat="(index, estado) in group.data | orderBy:'estado'" ng-click="accessState(estado.id)")
				span.rank {{index+1}}
				bar-item(percentage="{{estado.value}}" max="{{group.maxValue}}" data="estado" suffix="{{group.suffix}}")
					h3 {{data.estado}}
					p.municipios {{data.municipios}} municipios

		//
			.four.columns
				.summary
					p
						span.big-stats(animate-count number="{{group.total}}" suffix="%") 
						| das residências na 
						strong Amazônia Legal 
						| possuem {{group.selection.text}}.